@model IEnumerable<Gerenciador_de_Cinema.Models.Filmes>

@{
    ViewData["Title"] = "Menu";
}

<h2>Filmes</h2>

<p>
    <a asp-action="Create">Criar um novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duracao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duracao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_filme">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id_filme">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.id_filme">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
