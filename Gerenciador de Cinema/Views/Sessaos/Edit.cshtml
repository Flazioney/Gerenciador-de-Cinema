            <div class="form-group">
                <label asp-for="data_exb" class="control-label"></label>
                <input asp-for="data_exb" class="form-control" />
                <span asp-validation-for="data_exb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hr_ini" class="control-label"></label>
                <input asp-for="hr_ini" class="form-control" />
                <span asp-validation-for="hr_ini" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hr_fim" class="control-label"></label>
                <input asp-for="hr_fim" class="form-control" />
                <span asp-validation-for="hr_fim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="valor_ing" class="control-label"></label>
                <input asp-for="valor_ing" class="form-control" />
                <span asp-validation-for="valor_ing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_filme" class="control-label"></label>
                <input asp-for="id_filme" class="form-control" />
                <span asp-validation-for="id_filme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_sala" class="control-label"></label>
                <input asp-for="id_sala" class="form-control" />
                <span asp-validation-for="id_sala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
