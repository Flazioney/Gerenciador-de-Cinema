@model Gerenciador_de_Cinema.Models.Sessao

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Sessões</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
