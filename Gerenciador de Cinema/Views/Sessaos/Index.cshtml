@model IEnumerable<Gerenciador_de_Cinema.Models.Sessao>

@{
    ViewData["Title"] = "Sessoes";
}

<h2>Sessoes</h2>

<p>
    <a asp-action="Create">Cadastrar um novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.data_exb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hr_ini)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hr_fim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor_ing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filmes.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salas.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.data_exb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hr_ini)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hr_fim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor_ing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filmes.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salas.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_sessao">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id_sessao">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.id_sessao">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
